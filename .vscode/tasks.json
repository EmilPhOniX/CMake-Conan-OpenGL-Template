{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Prepare build folder",
            "type": "shell",
            "command": "rm -rf build && mkdir build",
            "problemMatcher": []
        },
        {
            "label": "Conan install",
            "type": "shell",
            "command": "conan",
            "args": [
                "install",
                "..",
                "--output-folder=.",
                "--build=missing"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [],
            "dependsOn": "Prepare build folder"
        },
        {
            "label": "CMake configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "..",
                "-DCMAKE_TOOLCHAIN_FILE=conan_toolchain.cmake",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_OSX_SYSROOT=${env:SDKROOT}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [],
            "dependsOn": "Conan install"
        },
        {
            "label": "CMake build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                ".",
                "--config",
                "Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [],
            "dependsOn": "CMake configure"
        },
        {
            "label": "setup-and-build",
            "dependsOn": [
                "CMake build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}